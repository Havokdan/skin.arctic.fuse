<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!-- Labels -->
    <variable name="Label_Title" containers="301,503,513,523,553" null_id="True">
        <value condition="!String.IsEmpty({listitem}.TvShowTitle)">$INFO[{listitem}.TvShowTitle]</value>
        <value condition="!String.IsEmpty({listitem}.AlbumArtist) + [String.IsEqual({listitem}.DBType,song) | String.IsEqual({listitem}.DBType,album)]">$INFO[{listitem}.AlbumArtist]</value>
        <value condition="!String.IsEmpty({listitem}.Artist) + [String.IsEqual({listitem}.DBType,song) | String.IsEqual({listitem}.DBType,album)]">$INFO[{listitem}.Artist]</value>
        <value condition="!String.IsEmpty({listitem}.Title)">$INFO[{listitem}.Title]</value>
        <value condition="!String.IsEmpty({listitem}.Label)">$INFO[{listitem}.Label]</value>
    </variable>

    <variable name="Label_Plot" containers="301,503,513,523,553" null_id="True">
        \<value condition="!String.IsEmpty({listitem}.Property(Album_Description))">$INFO[{listitem}.Property(Album_Description)]</value>
        <value condition="!String.IsEmpty({listitem}.Property(Artist_Description))">$INFO[{listitem}.Property(Artist_Description)]</value>
        <value condition="!String.IsEmpty({listitem}.AddonDescription)">$INFO[{listitem}.AddonDescription]</value>
        <value condition="String.IsEqual({listitem}.DBType,episode) + !String.IsEmpty({listitem}.Plot) + !String.IsEmpty({listitem}.Title)">$INFO[{listitem}.Season,S,]$INFO[{listitem}.Episode,E,: ]$INFO[{listitem}.Title] ~ $INFO[{listitem}.Plot]</value>
        <value condition="!String.IsEmpty({listitem}.EpisodeName) + !String.IsEmpty({listitem}.Plot)">$INFO[{listitem}.Season,S,]$INFO[{listitem}.Episode,E,: ]$INFO[{listitem}.EpisodeName] ~ $INFO[{listitem}.Plot]</value>
        <value condition="!String.IsEmpty({listitem}.Plot)">$INFO[{listitem}.Plot]</value>
        <value condition="!String.IsEmpty({listitem}.Property(biography))">$INFO[{listitem}.Property(biography)]</value>
        <value condition="!String.IsEmpty(Container(99952).ListItem.Property(Album_Description))">$INFO[Container(99952).ListItem.Property(Album_Description)]</value>
        <value condition="!String.IsEmpty(Container(99951).ListItem.Property(Artist_Description))">$INFO[Container(99952).ListItem.Property(Artist_Description)]</value>
        <value condition="!String.IsEmpty(Container(99950).ListItem.Plot)">$INFO[Container(99950).ListItem.Plot]</value>
    </variable>

    <variable name="Label_Landscape_Upper" containers="51,513" start="-2" end="7">
        <value condition="$EXP[Exp_IsPVRItem] + !String.IsEmpty({listitem}.Title)">$INFO[{listitem}.Title]</value>
        <value>$INFO[{listitem}.Label]</value>
    </variable>

    <variable name="Label_Landscape_Upper_Right" containers="51,513" start="-2" end="7">
        <value condition="$EXP[Exp_IsPVRItem]">$INFO[{listitem}.Season,S,]$INFO[{listitem}.Episode,E,]</value>
    </variable>

    <variable name="Label_Landscape_Lower" containers="51,513" start="-2" end="7">
        <value condition="!String.IsEmpty({listitem}.Property(job))">$INFO[{listitem}.Property(job)]</value>
        <value condition="!String.IsEmpty({listitem}.Property(role))">$INFO[{listitem}.Property(role)]</value>
        <value condition="!String.IsEmpty({listitem}.Property(character))">$INFO[{listitem}.Property(character)]</value>
        <value condition="!String.IsEmpty({listitem}.Property(department))">$INFO[{listitem}.Property(department)]</value>
        <value condition="$EXP[Exp_IsPVRItem] + !String.IsEmpty({listitem}.Title)">$INFO[{listitem}.ChannelName]</value>
        <value condition="!String.IsEmpty({listitem}.TvShowTitle) + !String.IsEqual({listitem}.Title,{listitem}.TVShowTitle) + !String.IsEqual({listitem}.DBType,tvshow)">$INFO[{listitem}.TvShowTitle]</value>
        <value condition="!String.IsEmpty({listitem}.Genre)">$INFO[{listitem}.Genre]</value>
        <value condition="!String.IsEmpty({listitem}.Premiered)">$INFO[{listitem}.Premiered]</value>
        <value condition="!String.IsEmpty({listitem}.Label2)">$INFO[{listitem}.Label2]</value>
    </variable>

    <variable name="Label_Landscape_Lower_Right" containers="51,513" start="-2" end="7">
        <value condition="$EXP[Exp_IsPVRItem]">$INFO[{listitem}.Date]</value>
    </variable>

</includes>