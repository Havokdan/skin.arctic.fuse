{
    "comments": "Dynamic Submenus",
    "template": "generator/data/parts/basic_include.xmltemplate",
    "includes_name": "skinvariables-{item}-submenu",
    "includes_part": {
        "menu": "{item}",
        "for_each": [
            {
                "template": "generator/data/parts/submenu_standard.xmltemplate",
                "datafile": "generator/data/setup/submenu_row.json",
                "condition": "{item_submenulist_path}==",
                "parts_visible": {
                    "template": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})"
                }
            },
            {
                "template": "generator/data/parts/submenu_dynamic.xmltemplate",
                "datafile": "generator/data/setup/submenu_row.json",
                "condition": "{item_submenulist_path}!=",
                "parts_visible": {
                    "template": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})"
                }
            }
        ]
    }
}