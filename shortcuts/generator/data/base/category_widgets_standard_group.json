{
    "comments": "Widget Group",
    "template": "generator/data/parts/basic_content.xmltemplate",
    "condition": "{item_global_widgets}==",

    "includes_name": "Hub_Menu_Group",
    "includes_part": {

        "template": "generator/data/parts/widgets_grouplist.xmltemplate",
        "datafile": "generator/data/setup/widgets_grouplist.json",

        "all_content_adapative_widgets": {
            "template": "generator/data/parts/widgets_row.xmltemplate",
            "datafile": [
                "generator/data/setup/widgets_row.json",
                "generator/data/setup/widgets_content_adaptive.json"
            ],
            "condition": [
                "{item_use_as_widget}==True",
                "{item_submenulist_path}!=||{item_use_as_list}==True"
            ]
        },

        "all_adapative_widgets": {
            "menu": "{item_menu}",
            "item": "{item_x}",
            "mode": "submenu",
            "condition": ["{item_use_as_widget}==True", "{item_submenulist_path}==", "{item_use_as_list}=="],
            "for_each": [
                {
                    "template": "generator/data/parts/widgets_row.xmltemplate",
                    "datafile": [
                        "generator/data/setup/widgets_row.json",
                        "generator/data/setup/widgets_adaptive.json"
                    ],
                    "condition": "{item_path}!="
                }
            ]
        },

        "all_standard_widgets": {
            "menu": "{item_menu}",
            "item": "{item_x}",
            "mode": "widgets",
            "for_each": [
                {
                    "template": "generator/data/parts/widgets_row.xmltemplate",
                    "datafile": "generator/data/setup/widgets_row.json",
                    "condition": "{item_path}!="
                }
            ]
        },

        "all_endrow_selector": {
            "comments": "Widget Selector",
            "template": "generator/data/parts/endrow_selector.xmltemplate",
            "condition": "Skin.HasSetting(Hubs.WidgetSelector)",
            "endrow_visible": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})",
            "all_endrow_items": {
                "menu": "{item_menu}",
                "item": "{item_x}",
                "mode": "widgets",
                "for_each": [
                    {
                        "template": "generator/data/parts/endrow_item.xmltemplate",
                        "datafile": [
                            "generator/data/setup/onclick_path.json",
                            "generator/data/setup/endrow_item.json"
                        ],
                        "condition": "{item_path}!="
                    }
                ]
            }
        }
    }
}