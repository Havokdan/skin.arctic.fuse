                                <param name="detailed">Control.HasFocus(303)</param>
                            </include>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(303)</visible>
                            <include content="Layout_Home_Menu">
                                <param name="selected">true</param>
                                <param name="detailed">Control.HasFocus(303)</param>
