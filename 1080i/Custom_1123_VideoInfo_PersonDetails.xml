                <param name="visible">[!String.IsEmpty(Window.Property(Item_Query)) + [[String.IsEqual(Container(7000).ListItem.Label,$LOCALIZE[31386])] | [String.IsEqual(Window.Property(Department_Label),Acting) + String.IsEqual(Container(7000).ListItem.Label,$LOCALIZE[31387])]]]</param>
            </include>

            <include content="Widget_Info_Row">
                <param name="id">02</param>
                <param name="secondary_label">$INFO[Window.Property(Item_Title)]</param>
                <param name="label">$LOCALIZE[31383]</param>
                <param name="include">List_Landscape_Row</param>
                <content>plugin://plugin.video.themoviedb.helper/?info=crew_in_both&amp;tmdb_type=person$INFO[Window.Property(Item_Query)]$VAR[Path_Param_Widget]</content>
                <param name="visible">[!String.IsEmpty(Window.Property(Item_Query)) + [String.IsEqual(Container(7000).ListItem.Label,$LOCALIZE[31383])]]</param>
            </include>

            <include content="Widget_Info_Row">
                <param name="id">03</param>
                <param name="secondary_label">$INFO[Window.Property(Department_Label)]</param>
                <param name="label">$LOCALIZE[31387]</param>
                <param name="include">List_Landscape_Row</param>
                <content>plugin://plugin.video.themoviedb.helper/?info=crew_in_both&amp;tmdb_type=person&amp;filter_key=department&amp;filter_value=$INFO[Window.Property(Department_Label)]$INFO[Window.Property(Item_Query)]$VAR[Path_Param_Widget]</content>
                <param name="visible">[!String.IsEmpty(Window.Property(Item_Query)) + !String.IsEmpty(Window.Property(Department_Label)) + !String.IsEqual(Window.Property(Department_Label),Acting) + [String.IsEqual(Container(7000).ListItem.Label,$LOCALIZE[31387])]]</param>
