<?xml version="1.0" encoding="UTF-8"?>
<window>
    <include content="Object_DefaultControl" condition="Window.IsVisible(interfacesettings)">
        <param name="defaultcontrol">30002</param>
        <param name="always">true</param>
    </include>
    <include content="Object_DefaultControl" condition="Window.IsVisible(mediasettings)">
        <param name="defaultcontrol">30003</param>
        <param name="always">true</param>
    </include>
    <include content="Object_DefaultControl" condition="Window.IsVisible(playersettings)">
        <param name="defaultcontrol">30004</param>
        <param name="always">true</param>
    </include>
    <include content="Object_DefaultControl" condition="Window.IsVisible(systemsettings)">
        <param name="defaultcontrol">30005</param>
